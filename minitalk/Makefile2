SRCS1 =  server.c \
		utils.c

SRCS2 = client.c

OBJS1 = ${SRCS1:.c=.o}
OBJS2 = ${SRCS2:.c=.o}

HDRS = so_long.h\
		get_next_line.h

NAME1 = server
NAME2 = client

cc = gcc

RM = rm -f

CFLAGS = -Wall -Wextra -Werror 

%.o: %.c
	$(CC) $(CFLAGS) -Ilmx -c $< -o $@

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS1) -o $(NAME1)
	$(CC) $(CFLAGS) $(OBJS2) -o $(NAME2)


all: ${NAME}

norminette:
	norminette $(SRCS)

clean:
	${RM} ${OBJS}

fclean: clean
	${RM} ${NAME}

re: fclean all

.PHONY: all clean fclean re